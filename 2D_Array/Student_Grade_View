def student_add():
    print("What Would You Like to do?\n1: Add a Student\n2: Add a Grade to a Student\n3: Return to the Menu")
    while True:
        try:
            choice = int(input())
        except:
            print("Enter a Vaild Option:")
            continue
        if choice == 1:
            os.system("cls")
            try_add_student()
            break
        elif choice == 2:
            os.system("cls")
            break
        elif choice == 3:
            os.system("cls")
            print(f"Please Chose one of the Following\n{choices}")
            choice_input()
            break
        else:
            print("Enter a Vaild Option:")
def choice_input():
    while True:
        try:
            choice = int(input())
        except:
            print("Enter a Vaild Option:")
            continue
        if choice == 1:
            os.system("cls")
            student_add()
            break
        elif choice == 2:
            os.system("cls")
            break
        elif choice == 3:
            os.system("cls")
            break
        elif choice == 4:
            os.system("cls")
            break
        elif choice == 5:
            os.system("cls")
            break
        else:
            print("Please Enter a Vaild Option:")
def program_start():
    print(f"Welcome, please select one of the following options\n{choices}")
    choice_input()
program_start()
